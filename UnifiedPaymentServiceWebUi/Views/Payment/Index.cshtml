@model IEnumerable<UnifiedPaymentServiceWebUi.ViewModels.ServiceViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">
  <h2 style="text-align:center;padding:5px;background-color:gray">Recharge and Pay Bills</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            
            <div class="col-sm-3" >
                <a id="@item.ServiceName" href="@Url.Action("PaymentProcess","Payment",new { serviceId = item.ServiceId })"> <img class="img-fluid" style="width:50px;height:50px;" src=@item.ImageLoc align="middle"><br/></a>
                <h5 >@Html.DisplayFor(modelItem => item.ServiceName)</h5>

            </div>
            
        }
    </div>
</div>
